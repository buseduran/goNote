{
    "configurations": [
        {
            "type": "go",
            "request": "launch",
            "name": "Launch Go Program",
            "program": "${workspaceFolder}/goNote.Api/${input:programPath}",
            "mode": "debug",
            "cwd": "${workspaceFolder}/goNote.Api",
            "envFile": "${workspaceFolder}/goNote.Api/.env",
            "args": []
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "programPath",
            "description": "Path to the Go program file"
        }
    ]
}